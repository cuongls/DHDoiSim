@*ThaiHN thêm*@
@using (Html.BeginForm("ThongKeOutBound", "ThongKes", FormMethod.Get))
{
    @*@Html.Hidden("NguoiGoi", "");*@
    <div class="row">
        <div class="col-md-2">
            Chọn Nhóm
        </div>
        <div class="col-md-2">
            @Html.DropDownList("Nhom", (IEnumerable<SelectListItem>)ViewData["DSNhom"],
            new { onchange = "OnOutBoundChange(this.value)" })
        </div>
    </div>

    <div class="row">

        <div class="col-md-2">
            Từ ngày khóa phiếu (m/d/yyyy)
        </div>

        <div class="col-md-2">
            @Html.TextBox("TuNgay", "", new { style = "color:red" })
        </div>

        <div class="col-md-2">
            Đến ngày khóa phiếu (m/d/yyyy)
        </div>

        <div class="col-md-2">
            @Html.TextBox("DenNgay", "", new { style = "color:red" })
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-info">
                <span class="glyphicon glyphicon-search"></span>
                <span class="submit-text">&nbsp;&nbsp;Xem</span>
            </button>
        </div>

    </div>
}
